<!--components/checkbox/checkbox.wxml-->
<view 
   class="todo-checkbox {{ checked ? 'todo-checkbox--checked' : '' }}"
   bindtap='handleToggle'>
   
   <icon
      class="todo-checkbox__icon"
      type='success_no_circle'
      color="{{ checked ? '#c1c5c8' : 'white' }}"
      size='12'>
   </icon>

</view>
