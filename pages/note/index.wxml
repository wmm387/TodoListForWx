<!--pages/note/index.wxml-->
<view class='page'>
  <view
    wx:for="{{notes}}"
    wx:key="{{index}}"
    class='ripple fast fadeInRight'
    style='animation-delay: {{delay ? index * 0.1 : 0}}s'>
    <note-card
      note="{{item}}"
      data-index="{{index}}"
      bindtap="handleNoteClick"
      bindlongpress="handleNoteLongclick"
      bindtouchend="handleNoteTouchEnd">
    </note-card>
  </view>
  <view class='ripple bounceIn' wx:if="{{!notes.length}}">
    <tips-info text="还没有笔记哦, 快去新建一个吧!"></tips-info>
  </view>
  <view class='note-add' bindtap='handleAddNote'>+</view>
</view>
